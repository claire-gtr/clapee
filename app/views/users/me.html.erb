<div class="container-margin">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h2 class="title-form">Mon profil</h2>

        <br>
        <div class="profile-infos">
          <div class="profile-concert">Les avis que j'ai donné : </div> <br>

          <% current_user.reviews.where(stars: "5").each do |review| %>
            <div class="profile-title"><%= review.event.title %> </div>
            <div class="profile-avis"> Le <%= review.created_at.strftime("%e %b %Y - %Hh%M") %> vous avez écrit l'avis suivant :</div>
            <%= review.content %> <br>
            <div class="profile-voir-concert"><%= link_to "Voir le concert", event_path(review.event), class:"links" %></div> <br>
          <% end %>

          <br>

          <%= link_to "Modifier mon profil", edit_user_registration_path, class:"btn btn-default" %>

          <div class="back-home">
            <%= link_to "Retour à la liste des concerts", root_path, class:"btn btn-back-concert" %>
          </div>
        </div>
      </div>
      <!-- <div class="col-xs-6 col-md-4">
        <%= image_tag current_user.profile_picture, class: "profile-picture"%>
      </div> -->
    </div>
  </div>
</div>
