<div class="container-margin">
  <div class="container">
    <h2 class="title-form">Mon profil</h2>

    <br>

    Mes concerts notés 5 étoiles : <br>

    <% current_user.reviews.where(stars: "5").each do |review| %>
      <%= review.event.title %> <br>
      Le <%= review.created_at.strftime("%e %b %Y - %Hh%M") %> vous avez écrit l'avis suivant :
      <%= review.content %> <br>
      <%= link_to "Voir le concert", event_path(review.event) %> <br>
    <% end %>

    <br>

    <%= link_to "Modifier mon profil", edit_user_registration_path %>

    <div class="back-home">
      <%= link_to "Retour à la liste des concerts", root_path, class:"btn btn-default" %>
    </div>
  </div>
</div>
