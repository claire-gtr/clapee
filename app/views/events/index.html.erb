<% content_for(:navbar_scroll, true) %>

<%= render "shared/banner" %>

<%= form_tag root_path, method: :get do %>
  <%= text_field_tag :search,
    params[:search],
    class: "form-control",
    placeholder: "Trouver un concert"
  %>
  <%= submit_tag "Rechercher", class: "btn btn-danger" %>
<% end %>

<% @events.each do |event| %>
