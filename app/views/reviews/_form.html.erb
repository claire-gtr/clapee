<div class="review-form">
  <%= simple_form_for( [@event, @review], remote: true, validate: true) do |f| %>
    <%= f.error_notification %>
    <div class="rating-stars">
      <%= f.collection_radio_buttons :stars, (1..5).to_a.reverse, :to_i, :to_i, boolean_style: :inline, item_wrapper_tag: false do |b| %>
        <%= b.radio_button class: "star star-#{b.text}" %>
        <%= b.label class: "star star-#{b.text}" do %>
          <svg width="24" height="24" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M32 11.4286L20.8036 9.97211L16 0L11.1953 9.97211L0 11.4286L8.23104 18.8884L6.10714 29.7121L16 24.3974L25.8951 29.7121L23.7679 18.8884L32 11.4286Z" fill="#CCC">
          </svg>
        <% end %>
      <% end %>
    </div>
    <%= f.input :content, method: :create, label: false, id: "content-area", placeholder: "Vous avez assité à ce concert ? Dites-nous ce que vous en avez pensé..."%>
    <%= f.error :content%>
    <%= f.button :submit, "Publier", class: "btn btn-primary btn-clapee" %>
  <% end %>
</div>
